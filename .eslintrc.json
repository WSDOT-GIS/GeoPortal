{
    "root": true,
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended"
    ],
    "overrides": [
        {
            "extends": [
                "eslint:recommended",
                "plugin:prettier/recommended"
            ],
            "parser": "default",
            "files": [
                "webpack.config.js"
            ],
            "env": {
                "node": true
            },
            "ecmaFeatures": {
                "modules": false
            }
        }
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        "prettier/prettier": "warn"
    }
}